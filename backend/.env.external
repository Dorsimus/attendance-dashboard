# External Hosting Environment Configuration
# Copy this to .env and fill in your values

# Application Settings
SECRET_KEY=your-super-secret-key-generate-a-new-one-for-production
FLASK_ENV=production
FLASK_DEBUG=False

# Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password
MANAGER_USERNAME=manager
MANAGER_PASSWORD=your-secure-manager-password

# Database (if using PostgreSQL)
DB_PASSWORD=your-database-password
DATABASE_URL=postgresql://attendance_user:your-database-password@postgres:5432/attendance_db

# SSL/TLS
LETSENCRYPT_EMAIL=your-email@redstoneintelligence.com

# External API Keys (for data sync)
SYNC_API_KEY=your-api-key-for-remote-sync
SYNC_API_URL=https://your-data-source.com/api

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_FROM=notifications@redstoneintelligence.com
EMAIL_PASSWORD=your-email-password
EMAIL_TO=admin@redstoneintelligence.com

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_ENABLED=true

# Security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Backup
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
